@model Hotel.PortalWWW.Models.CMS.Page

@{
    ViewData["Title"] = "Edytuj stronę";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Edytuj stronę</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdStrony" />
                <div class="mb-3">
                    <label asp-for="LinkTytul" class="form-label font-weight-bold"></label>
                    <input asp-for="LinkTytul" class="form-control" />
                    <span asp-validation-for="LinkTytul" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tytul" class="form-label font-weight-bold"></label>
                    <input asp-for="Tytul" class="form-control" />
                    <span asp-validation-for="Tytul" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Tresc" class="form-label font-weight-bold"></label>
                    <textarea asp-for="Tresc" class="form-control"></textarea>
                    <span asp-validation-for="Tresc" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Pozycja" class="form-label font-weight-bold"></label>
                    <input asp-for="Pozycja" class="form-control" />
                    <span asp-validation-for="Pozycja" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" value="Zapisz" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
