@model IEnumerable<Reservation>

@{
    ViewData["Title"] = "Rezerwacje";
}

<p>
    <a class="btn btn-primary" asp-action="Create">+ Dodaj</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataRozpoczecia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataZakonczenia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypRezerwacji)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UzytkownikId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataRozpoczecia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataZakonczenia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TypRezerwacji)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UzytkownikId)
            </td>
            <td>
                <a class="btn btn-warning btn-sm text-white" asp-action="Edit" asp-route-id="@item.IdRezerwacji">✎ Edytuj</a> |
                <a class="btn btn-info btn-sm text-white" asp-action="Details" asp-route-id="@item.IdRezerwacji">📄 Szczegóły</a> |
                <a class="btn btn-danger btn-sm text-white" asp-action="Delete" asp-route-id="@item.IdRezerwacji">⛌ Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
