@model Hotel.Intranet.Models.Intranet.Messages

@{
    ViewData["Title"] = "Szczegóły wiadomości";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Szczegóły wiadomości</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Temat</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Temat)</dd>

                <dt class="col-sm-3 font-weight-bold">Treść</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tresc)</dd>

                <dt class="col-sm-3 font-weight-bold">Data wysłania</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DataWyslania)</dd>

                <dt class="col-sm-3 font-weight-bold">Nadawca</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NadawcaId)</dd>

                <dt class="col-sm-3 font-weight-bold">Odbiorca</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.OdbiorcaId)</dd>

                <dt class="col-sm-3 font-weight-bold">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.IdWiadomosci" class="btn btn-warning text-white me-2">✎ Edytuj</a>
            <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
        </div>
    </div>
</div>
