@model User

@{
    ViewData["Title"] = "Szczegóły użytkownika";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Szczegóły użytkownika</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Rola</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Rola)</dd>

                <dt class="col-sm-3 font-weight-bold">Imię</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Imie)</dd>

                <dt class="col-sm-3 font-weight-bold">Nazwisko</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nazwisko)</dd>

                <dt class="col-sm-3 font-weight-bold">Adres e-mail</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-3 font-weight-bold">Telefon</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefon)</dd>

                <dt class="col-sm-3 font-weight-bold">Hasło</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Haslo)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.IdUzytkownika" class="btn btn-warning text-white me-2">✎ Edytuj</a>
            <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
        </div>
    </div>
</div>