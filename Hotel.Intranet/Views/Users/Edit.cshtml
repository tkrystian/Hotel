@using Hotel.Data.Data.Users
@model User

@{
    ViewData["Title"] = "Edytuj użytkownika";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Edytuj użytkownika</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdUzytkownika" />
                <div class="mb-3">
                    <label asp-for="Rola" class="form-label font-weight-bold"></label>
                    <input asp-for="Rola" class="form-control" />
                    <span asp-validation-for="Rola" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Imie" class="form-label font-weight-bold"></label>
                    <input asp-for="Imie" class="form-control" />
                    <span asp-validation-for="Imie" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Nazwisko" class="form-label font-weight-bold"></label>
                    <input asp-for="Nazwisko" class="form-control" />
                    <span asp-validation-for="Nazwisko" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label font-weight-bold"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Telefon" class="form-label font-weight-bold"></label>
                    <input asp-for="Telefon" class="form-control" />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Haslo" class="form-label font-weight-bold"></label>
                    <input asp-for="Haslo" class="form-control" />
                    <span asp-validation-for="Haslo" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" value="Zapisz" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
