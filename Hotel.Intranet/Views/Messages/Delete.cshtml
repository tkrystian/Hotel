@using Hotel.Data.Data.Messages
@model Message

@{
    ViewData["Title"] = "Usuń wiadomość";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Usuń wiadomość</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Czy na pewno chcesz usunąć tę wiadomość?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Temat)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Temat)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Tresc)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tresc)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.DataWyslania)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DataWyslania)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdWiadomosci" />
                <div class="text-end">
                    <input type="submit" value="Usuń" class="btn btn-danger me-2" />
                    <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>