@using Hotel.Data.Data.Reservations
@model Reservation

@{
    ViewData["Title"] = "Edytuj rezerwację";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Edytuj rezerwację</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdRezerwacji" />
                <div class="mb-3">
                    <label asp-for="DataRozpoczecia" class="form-label font-weight-bold"></label>
                    <input asp-for="DataRozpoczecia" class="form-control" />
                    <span asp-validation-for="DataRozpoczecia" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DataZakonczenia" class="form-label font-weight-bold"></label>
                    <input asp-for="DataZakonczenia" class="form-control" />
                    <span asp-validation-for="DataZakonczenia" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="TypRezerwacji" class="form-label font-weight-bold"></label>
                    <input asp-for="TypRezerwacji" class="form-control" />
                    <span asp-validation-for="TypRezerwacji" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="UzytkownikId" class="form-label font-weight-bold"></label>
                    <input asp-for="UzytkownikId" class="form-control" />
                    <span asp-validation-for="UzytkownikId" class="text-danger"></span>
                </div>
                <div class="text-end">
                    <input type="submit" value="Zapisz" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
