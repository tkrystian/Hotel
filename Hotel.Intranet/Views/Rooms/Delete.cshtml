@using Hotel.Data.Data.Rooms
@model Room

@{
    ViewData["Title"] = "Usuń pokój";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Usuń pokój</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Czy na pewno chcesz usunąć ten pokój?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Typ)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Typ)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Numer)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Numer)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Opis)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Opis)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.LiczbaOsob)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.LiczbaOsob)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Cena)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Cena)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Status)
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdPokoju" />
                <div class="text-end">
                    <input type="submit" value="Usuń" class="btn btn-danger me-2" />
                    <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>