@using Hotel.Data.Data.CMS
@model Media

@{
    ViewData["Title"] = "Usuń plik";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Usuń plik</h4>
        </div>
        <div class="card-body">
            <h5 class="text-danger">Czy na pewno chcesz usunąć ten plik?</h5>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.FileName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FileName)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.FilePath)
                </dt>
                <dd class="col-sm-9">
                    <a href="@Url.Content(Model.FilePath)" target="_blank">@Html.DisplayFor(model => model.FilePath)</a>
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.FileType)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FileType)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.RelatedObjectType)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RelatedObjectType)
                </dd>
                <dt class="col-sm-3 font-weight-bold">
                    @Html.DisplayNameFor(model => model.CreatedAt)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="IdMedia" />
                <div class="text-end">
                    <input type="submit" value="Usuń" class="btn btn-danger me-2" />
                    <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
                </div>
            </form>
        </div>
    </div>
</div>