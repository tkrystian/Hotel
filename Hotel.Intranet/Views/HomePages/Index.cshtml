@using Hotel.Data.Data.CMS
@model IEnumerable<HomePage>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-primary" asp-action="Create">+ Dodaj</a>
</p>
<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.Banner)
            </th>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.Grafika)
            </th>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.Naglowek)
            </th>
            <th class="col-1">
                @Html.DisplayNameFor(model => model.Tagi)
            </th>
            <th class="col-5">
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th class="col-3"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/content/media/banners/@(item.Banner != null ? $"{item.Banner.FilePath}" : "")" class="image-preview" />
                </td>
                <td>
                    <img src="~/content/media/misc/@(item.Grafika != null ? $"{item.Grafika.FilePath}" : "")" class="image-preview" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Naglowek)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tagi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opis)
                </td>
                <td>
                    <a class="btn btn-warning btn-sm text-white" asp-action="Edit" asp-route-id="@item.Id">✎ Edytuj</a> |
                    <a class="btn btn-info btn-sm text-white" asp-action="Details" asp-route-id="@item.Id">📄 Szczegóły</a> |
                    <a class="btn btn-danger btn-sm text-white" asp-action="Delete" asp-route-id="@item.Id">⛌ Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
