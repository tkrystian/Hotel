@using Hotel.Data.Data.CMS
@model Page

@{
    ViewData["Title"] = "Szczegóły strony";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Szczegóły strony</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Tytuł linku</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.LinkTytul)</dd>

                <dt class="col-sm-3 font-weight-bold">Tytuł</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tytul)</dd>

                <dt class="col-sm-3 font-weight-bold">Treść</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tresc)</dd>

                <dt class="col-sm-3 font-weight-bold">Pozycja</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Pozycja)</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.IdStrony" class="btn btn-warning text-white me-2">✎ Edytuj</a>
            <a asp-action="Index" class="btn btn-secondary">⬅ Powrót do listy</a>
        </div>
    </div>
</div>

